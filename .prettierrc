{
    "plugins": ["@shufo/prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "parser": "blade",
                "tabWidth": 4,
                "singleQuote": false,
                "endOfLine": "auto",
                "quotes": ["error", "double"]
            }
        }
    ]
}
